//write a program to find out the area and perimeter of circle
//header file
#include <stdio.h>
void main()
{
    //variable declaration
    int radius,area,perimeter;
    //output statement prompt
    printf("enter the radius of the circle\n");
    //input statement
    scanf("%d",&radius);
    //assignment statement
    area=3.14159*radius*radius;
    perimeter=2*3.14159*radius;
    //output statement
    printf("area of the circle is %d\n",area);
    printf("perimeter of the circle is %d",perimeter);
}
